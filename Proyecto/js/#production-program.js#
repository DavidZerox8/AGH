  /**
  * FunciÅÛn que cambiara el estatus a entregado de unas of y los pintara de color con una bandera
  */
  $('#formChangePrint').on('submit', function(event){
    
    //Validamos que al menos un OF estÅÈ seleccionada
    if (!$('.checkbox-child').is(':checked')) {
      alert('Favor de seleccionar al menos una  orden de fabricaciÅÛn');
      return false;
    }

    //creamos nuestros arreglos que contendran las infrÅøormacion de las ordenes de fabricaciÅÛn
    var checkboxValues = new Array();
    var dataOrder = new Array();
    var dataPriority = new Array();
    var dataPartition = new Array();
    var ofSinPrioridad = '';

    //asignamos los valores a los arreglos
    $('.checkbox-child:checked').each(function() {
      checkboxValues.push($(this).val());
      dataOrder.push($(this).attr('data-order'));
      dataPriority.push($(this).attr('data-priority'));
      dataPartition.push($(this).attr('data-partition'));
    });

    //recorremos el arreglo para obtener las doats de la of
    for (var i = 0; i < checkboxValues.length ; i++){
      //Validamos si la prioridad de la of es mayor a 0
      if ( dataPriority[i] > 0){
        //Agregamos el valor seleccionado al formulario para enviarlo en la peticiÅÛn
        $(this).append(
          '<input type="hidden" name="order_id[]" value="' + checkboxValues[i] + '">'+
          '<input type="hidden" name="priority[]" value="' + dataPriority[i] + '">'+
          '<input type="hidden" name="partition_number[]" value="' + dataPartition[i] + '">'
        );
      }else{
        //concatenmoas las of que no tiene prioridad
       
           ofSinPrioridad =   ofSinPrioridad + " " + dataOrder[i];
      
       

      } 
    }
 
    //validamos si alfuna of no tiene prioridad
    if (ofSinPrioridad.length == 0){
      var response =  confirm("ÅøEsta seguro marcar como entregadas las ÅÛrdenes de fabricaciÅÛn seleccionadas?");
        if (response) {
          $(this).closest('formChangePrint').submit();
        }else{
          event.preventDefault();
        } 
    }else{
       alert('Las ÅÚrdenes de fabricaciÅÚn ' + ofSinPrioridad + ' no pueden ser marcadas como entregadas ya que no se les han asignado prioridad, favor de verificar');
        event.preventDefault();
    };

  });
  /**
  *  FunciÅÛn que busca un texto dentro de una tabla con el listado de ÅÛrdenes de fabricaciÅÛn
  *
  */
  function searchTable(inputVal)
  {
    var table = $('#fixTable');

    table.find('tbody tr').each(function(index, row)
    {
      var allCells = $(row).find('td');
      if(allCells.length > 0)
      {
        var found = false;
        allCells.each(function(index, td)
        {
          var regExp = new RegExp(inputVal, 'i');
          if(regExp.test($(td).text()))
          {
            found = true;
            return false;
          }
        });
        if(found == true)$(row).show();else $(row).hide();
      }
    });
  }

  /**
  * Filtro de bÅ˙squeda para la tabla con el listado de ÅÛrdenes de fabricaciÅÛn
  */
  $("#search").on("keyup", function() {
    searchTable($(this).val());
  });

  /**
  * Valida si al menos un checkbox estÅ· seleccionado
  * @returns {booelan} 
  */
  function isCheckBoxSelected(){

    if ($('.checkbox-child').is(':checked')) {
      return true;
    }else {
      return false;
    }

  }

  //********* ValidaciÅÛn de formularios *********

  // formChangeMachine
  $('#formChangeMachine').validate({
    rules: {
      machine_id: {
        required: true,
      }
    },
    highlight: function(element) {
      $(element).closest('.form-group').addClass('has-error');
    },
    unhighlight: function(element) {
      $(element).closest('.form-group').removeClass('has-error');
    },
    errorElement: 'span',
    errorClass: 'help-block',
    errorPlacement: function(error, element) {
      if(element.parent('.input-group').length) {
        error.insertAfter(element.parent());
      } else {
        error.insertAfter(element);
      }
    }
  });
    
});